#!/usr/bin/env zsh
# Based on https://github.com/dzervas/dotfiles/blob/0e52489/home/fish-functions/qq.fish

OUT=$(echo "${@}" | llm -t qq -p system "$(uname -a)"| sed \
	-e "s|<cmd>|%F{blue}|g" -e "s|</cmd>|%{$reset_color%}|g" \
	-e "s|<warn>|%F{yellow}|g" -e "s|</warn>|%{$reset_color%}|g" \
	-e "s|<info>|%F{blue}|g" -e "s|</info>|%{$reset_color%}|g" \
	-e "s|<bold>|%F{white}|g" -e "s|</bold>|%{$reset_color%}|g" \
	-e "s|<file>|%F{green}|g" -e "s|</file>|%{$reset_color%}|g" \
	-e "s|<br/>|\n|g")
print -P $OUT
