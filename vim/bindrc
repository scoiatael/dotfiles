" vi: syntax=vim, filetype=vim

" \ is too far to be good leader
map <Space> <Leader>

" Force save when forgot sudo
cmap w!! w !sudo tee > /dev/null %

nmap ; :CtrlP<CR>
nmap <Leader>; :Unite buffer<CR>
nmap <Leader>e :NERDTreeToggle<CR>
nmap <Leader>g :TagbarToggle<CR>
nmap <Leader>w :w<CR>
nmap <Leader>q :q<CR>
" Remove trailing whitespace
nmap <Leader><Leader>w :let _s=@/<Bar>:%s/\s\+$//e<Bar>:let @/=_s<Bar>:nohl<CR>
" Easy paste
nmap <Leader>o :set paste!<CR>
" Turn off highlight after search
nmap <Leader><Leader>q :nohlsearch<CR>

" Move by screen, not text line
nmap j gj
nmap k gk

" Buffer movement
nmap <Leader>h :bn<CR>
nmap <Leader>l :bp<CR>
nmap <Leader>d :bd<CR>

" Open all folds
nmap <Leader>f zR
" Close all folds
nmap <Leader>F zM

imap <C-a> <Home>
imap <C-e> <End>

let g:UltiSnipsExpandTrigger="<Leader><Tab>"
let g:UltiSnipsJumpForwardTrigger="<Leader><Tab>"
let g:UltiSnipsJumpBackwardTrigger="<S-Tab>"
